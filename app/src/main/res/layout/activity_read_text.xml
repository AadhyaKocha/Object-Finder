<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:id="@+id/text_show" />

        <Button
            android:id="@+id/try_again"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:drawableLeft="@drawable/small_redo"
            android:text="@string/try_again"
            android:textSize="30dp"
            android:backgroundTint="@color/orange_yellow"
            android:onClick="onTryAgainClicked"/>

        <Button
            android:id="@+id/find_key"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:drawableLeft="@drawable/small_people"
            android:text="@string/ask_help"
            android:textSize="30dp"
            android:backgroundTint="@color/princeton_orange"
            android:onClick="onAskForHelpClicked"/>

    </LinearLayout>

</ScrollView>